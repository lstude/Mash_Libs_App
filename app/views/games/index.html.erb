<h1>Create a Game</h1>

<table>
  <tr>
    <th>Games You're Playing</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= link_to 'Show', game %></td>
    <!-- <td><%= link_to 'Edit', edit_game_path(game) %></td> -->
    <td><%= link_to 'Delete Game', game, confirm: 'Are you sure you wish to delete this game?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'Create A New Game', new_game_path, :method => :get, :class => "btn-danger" %>
<br>
<br>
<%= button_to 'Invite Friends to Play', new_player_path, :method => :get, :class => "btn-danger" %>